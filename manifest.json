{
	"name": "M1 Plus",
	"version": "1.0",
	"description": "Вспомогательное расширение для Monopoly One",
	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://monopoly-one.com/inventory",
				"https://monopoly-one.com/profile/*/inventory"
			],
			"js": [
				"inventoryContentScripts.js"
			],
			"css": [
				"css/m1-plus-styles.css"
			]
		}
	],
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon64.png",
		"128": "images/icon128.png"
	},
	"manifest_version": 2
}